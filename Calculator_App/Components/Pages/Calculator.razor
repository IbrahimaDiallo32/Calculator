@page "/calculator"
@rendermode InteractiveServer

<h1>Calculator</h1>

<label for = "inputA">Input A</label>
<label for = "inputB"> Input B</label>
<div>
    <input type="number" @bind= "inputA" placeholder="0"> 
    <input type="number" @bind= "inputB" placeholder="0"> 
        
</div>

<div>
    <button @onclick= "AddNumbers" background-color = "#EBEBEB" color = "#000000">A + B</button>
</div>
<div>
    <button @onclick= "SubtractNumbers">A - B</button>
</div>
<div>
    <button @onclick= "MultiplyNumbers">A * B</button>
</div>
<button @onclick= "DivideNumbers">A / B</button>


@if (result.HasValue)
{
    <h3>Result: @result</h3>
}
@if (error.Equals(true))
{
    <h3>Result: error</h3>
}


@code {
    int? inputA { get; set; }
    int? inputB { get; set; }
    int? result { get; set; }
    bool error { get; set; }

    private void AddNumbers()
    {
        if (inputA.HasValue && inputB.HasValue)
        {
            result = inputA + inputB;
        }
        else
        {
            result = null;
        }
    }

    private void SubtractNumbers()
    {
        if (inputA.HasValue && inputB.HasValue)
        {
            result = inputA - inputB;
        }
        else
        {
            result = null;
        }
    }

    private void MultiplyNumbers()
    {
        if (inputA.HasValue && inputB.HasValue)
        {
            result = inputA * inputB;
        }
        else
        {
            result = null;
        }
    }

    private void DivideNumbers()
    { 
        if (inputB.Equals(0))
        {
            error = true;
        }
        if (inputA.HasValue && inputB.HasValue && !error)
        {
            result = inputA / inputB;
        }
        else
        {
            result = null;
        }
    }
}
